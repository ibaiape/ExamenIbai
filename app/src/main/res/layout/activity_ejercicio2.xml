<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dm2.examen.Ejercicio2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px">
        <TextView   android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona Provincia "/>
        <Spinner    android:id="@+id/spinnerProvincias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
    <LinearLayout   android:id="@+id/layUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:visibility="invisible">
        <TextView   android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona UbicaciÃ³n "/>
        <RadioGroup android:id="@+id/radGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/rad_costa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costa"/>
            <RadioButton android:id="@+id/rad_interior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interior"/>
        </RadioGroup>
    </LinearLayout>

    <Button android:id="@+id/btnVisualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VISUALIZAR LISTA"
        android:onClick="mostrarLista"
        android:layout_margin="20px"
        android:visibility="invisible"/>

</LinearLayout>
